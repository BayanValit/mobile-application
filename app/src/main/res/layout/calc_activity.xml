<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalcActivity">

    <TextView
        android:id="@+id/tv_total"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:width="100dp"
        android:foregroundGravity="center_vertical"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_size"
        app:layout_constraintBottom_toBottomOf="@+id/tv_label_total"
        app:layout_constraintEnd_toEndOf="@+id/sb_percent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/sb_percent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tip" />

    <TextView
        android:id="@+id/tv_label_total"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginTop="32dp"
        android:gravity="center_vertical"
        android:text="@string/total_str"
        app:layout_constraintEnd_toEndOf="@+id/tv_percent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_percent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tip" />

    <EditText
        android:id="@+id/et_amount"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="32dp"
        android:autofillHints=""
        android:ems="10"
        android:foregroundGravity="center_vertical"
        android:gravity="center_vertical"
        android:hint="@string/input_text_str"
        android:inputType="textShortMessage|textPersonName|numberDecimal"
        android:selectAllOnFocus="true"
        android:text="@string/enter_amount_str"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_percent"
        android:layout_width="55dp"
        android:layout_height="19dp"
        android:layout_marginTop="16dp"
        android:foregroundGravity="center_vertical"
        android:gravity="center_vertical"
        android:text="@string/percent_str"
        app:layout_constraintStart_toStartOf="@+id/et_amount"
        app:layout_constraintTop_toBottomOf="@+id/et_amount" />

    <SeekBar
        android:id="@+id/sb_percent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:max="100"
        android:progress="15"
        app:layout_constraintBottom_toBottomOf="@+id/tv_percent"
        app:layout_constraintEnd_toEndOf="@+id/et_amount"
        app:layout_constraintStart_toEndOf="@+id/tv_percent"
        app:layout_constraintTop_toTopOf="@+id/tv_percent" />

    <TextView
        android:id="@+id/tv_label_tip"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginTop="32dp"
        android:foregroundGravity="center_vertical"
        android:gravity="center_vertical"
        android:text="@string/tip_str"
        app:layout_constraintEnd_toEndOf="@+id/tv_percent"
        app:layout_constraintStart_toStartOf="@+id/tv_percent"
        app:layout_constraintTop_toBottomOf="@+id/sb_percent" />

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:width="100dp"
        android:foregroundGravity="center_vertical"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_size"
        app:layout_constraintBottom_toBottomOf="@+id/tv_label_tip"
        app:layout_constraintEnd_toEndOf="@+id/sb_percent"
        app:layout_constraintStart_toStartOf="@+id/sb_percent"
        app:layout_constraintTop_toTopOf="@+id/tv_label_tip"
        app:layout_constraintVertical_bias="0.83" />

</androidx.constraintlayout.widget.ConstraintLayout>